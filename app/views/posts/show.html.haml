.header
  .header__box
    = link_to "Fashionista", root_path, class: "header__box__name"
    .header__box__info
      %p.header__box__info__name
        = current_user.nickname
      - if user_signed_in? && current_user.id == @post.user_id    
        = link_to "削除", @posts, method: :delete, class: "header__box__info__post"
        = link_to "ログアウト", edit_user_path(current_user), class: "header__box__info__edit"
      - else
        = link_to "投稿", "/posts/new", class: "header__box__info__post"
        = link_to "ログアウト", edit_user_path(current_user), class: "header__box__info__edit"
.content__show
  .content__show__image
    = image_tag @post.image.url , height: '500px', width: '350px'
    .content__show__image__name
      = @post.user.nickname
